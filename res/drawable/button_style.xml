<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- when thhe button pressed -->
    <item>
        <shape >
            <solid
                    android:color="@color/light_green"/>

            <stroke
                    android:width="2dp"
                    android:color="@color/dark_gray"/>
            <corners
                    android:radius="10dp"/>

            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>

    <!-- the default style of the button -->

    <item>
        <shape >
            <solid
                    android:color="@color/light_green"/>

            <stroke
                    android:width="2dp"
                    android:color="@color/dark_gray"/>
            <corners
                    android:radius="20dp"/>


            <gradient
                    android:startColor="@color/green"
                    android:endColor="@color/gren"
                    android:angle="270"/>


            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>


</selector>